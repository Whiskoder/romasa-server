{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@auth": ["src/auth"],
      "@config": ["src/config"],
      "@crypto": ["src/crypto"],
      "@db": ["src/database"],
      "@employee": ["src/employeess"],
      "@logger": ["src/logger"],
      "@service-operations": ["src/service-operations"],
      "@shared": ["src/shared"],
      "@users": ["src/users"],
      "@vehicles": ["src/vehicles"]
    }
  }
}
